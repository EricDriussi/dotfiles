#!/usr/bin/env bash

sensors_output="$(sensors)"

if echo "$sensors_output" | grep -q ".*Core.*"; then
	temperature="$(echo "$sensors_output" | awk '/^Core/{gsub(/[Â°C+]/,"",$3); s+=$3; c++} END {print s/c}')"
	max_temp="$(echo "$sensors_output" | awk '/^Core/{gsub(/[Â°C+,]/,"",$6); s+=$6; c++} END{print s/c}')"
else
	temperature="$(echo "$sensors_output" | awk '/^Tctl:/{gsub(/[Â°C+]/,"",$2); print$2}')"
	max_temp="90"
fi

if (($(echo "$temperature < 45" | bc -l))); then
	label='ðŸ¥¶'
elif (($(echo "$temperature < 65" | bc -l))); then
	label='ðŸ˜Ž'
elif (($(echo "$temperature < 85" | bc -l))); then
	label='ðŸŒ¡ï¸'
elif (($(echo "$temperature < $max_temp" | bc -l))); then
	label='ðŸ¥µ'
else
	label='ðŸ”¥'
fi

echo "${label} ${temperature}Â°C"
exit 0
